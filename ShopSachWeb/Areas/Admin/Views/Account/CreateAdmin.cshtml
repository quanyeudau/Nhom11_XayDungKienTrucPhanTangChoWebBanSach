@model ApplicationUser

<div class="container-fluid px-4">
    <div class="card shadow border-0 rounded-4 my-4">
        <div class="card-header bg-primary bg-gradient py-3">
            <div class="row align-items-center">
                <div class="col">
                    <h2 class="text-white m-0 fw-bold">
                        <i class="bi bi-person-plus-fill me-2"></i>Create Admin Account
                    </h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <form method="post" asp-action="CreateAdmin">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-body">
                                <h5 class="card-title mb-4">Account Information</h5>
                                
                                <div class="mb-4">
                                    <label asp-for="Email" class="form-label">Email Address</label>
                                    <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="mb-4">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter password" required />
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Name" class="form-label">Full Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-body">
                                <h5 class="card-title mb-4">Contact Information</h5>
                                
                                <div class="mb-4">
                                    <label asp-for="StreetAddress" class="form-label">Street Address</label>
                                    <input asp-for="StreetAddress" class="form-control" placeholder="Enter street address" />
                                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <label asp-for="City" class="form-label">City</label>
                                        <input asp-for="City" class="form-control" placeholder="Enter city" />
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <label asp-for="State" class="form-label">State</label>
                                        <input asp-for="State" class="form-control" placeholder="Enter state" />
                                        <span asp-validation-for="State" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="PostalCode" class="form-label">Postal Code</label>
                                    <input asp-for="PostalCode" class="form-control" placeholder="Enter postal code" />
                                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-3 justify-content-end">
                            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left me-2"></i>Back
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-person-plus-fill me-2"></i>Create Admin
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
} 